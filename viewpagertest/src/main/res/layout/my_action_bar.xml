<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/actionbarLayout"
              android:layout_width="match_parent"
              android:layout_height="@dimen/action_bar_height"
              android:orientation="horizontal"
              android:padding="@dimen/action_bar_padding">

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="left">

        <ImageView
                android:id="@+id/btnActionbarLeft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/action_bar_button_margin"
                android:scaleType="fitCenter"
                android:src="@mipmap/action_bar_btn_back_normal"/>
    </LinearLayout>

    <TextView
            android:id="@+id/textViewActionBarTitle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/action_bar_title_font_color"
            android:textSize="@dimen/action_bar_title_font_size"
            android:text="DEFAULT ACTION BAR TEXT"/>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="right">

        <TextView
                android:id="@+id/textViewActionBarRight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/action_bar_title_font_color"
                android:textSize="@dimen/action_bar_title_font_size"
                android:text="right button"/>

        <ImageView
                android:id="@+id/btnActionbarRight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/action_bar_button_margin"
                android:scaleType="fitCenter"
                android:src="@mipmap/action_bar_btn_back_normal"/>
    </LinearLayout>

</LinearLayout>